{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">User Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Email :</th>
                            <td>{{ user.email }}</td>
                        </tr>

                        <tr>
                            <th scope="row">Author :</th>
                            <td>{{ user.author }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date d'inscription :</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Derni√®re MAJ du profil :</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>

        </div>
    </div>
{% endblock %}
