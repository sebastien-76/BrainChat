{# _form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    {% for field in form %}
        {{ form_row(field) }}
    {% endfor %}

    <div class="d-grid gap-2 mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
