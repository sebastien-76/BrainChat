							<a class="nav-link text-white" href="{{ path('app_logout') }}">
								Déconnexion</a>
						</li>
					</ul>
				{% else %}
					<ul class="navbar-nav ms-auto pe-5">
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_login') }}">Connexion</a>
						</li>
					</ul>
