{% extends 'base.html.twig' %}

{% block title %}Détails de la salle{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Détails de la salle</h1>

            <div class="card shadow">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th width="30%">ID</th>
                                <td>{{ room.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ room.title }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ room.description }}</td>
                            </tr>
                            <tr>
                                <th>Date de création</th>
                                <td>{{ room.createdAt ? room.createdAt|date('d/m/Y H:i') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h3 class="mb-0">Participants</h3>
                </div>
                <div class="card-body">
                    {% if room.participants|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for participant in room.participants %}
                                <li class="list-group-item">{{ participant.user.author }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0">Aucun participant pour le moment.</p>
                    {% endif %}
                </div>
            </div>
            <div class="text-center mt-4">
                <div class="btn-group" role="group">
                    <a href="{{ path('app_room_index') }}" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
